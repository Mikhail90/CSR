<p>For Admin only </p>
<%= form_for(@request) do |f| %>
  <% if @request.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@request.errors.count, "error") %> prohibited this request from being saved:</h2>

      <ul>
      <% @request.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

 <div class="field">
    <%= f.label "Request Title" %><br />
    <%= f.text_field :title%>
  </div>


 <div class="field">
    <%= f.label "Accepted" %><br />
    <%= f.check_box :approved %>
  </div> 

   <div class="field">
    <%= f.label :status %><br />
    <%= f.text_field :status %>
  </div>

   <div class="textarea_box">
    <%= f.label :comments %><br />
    <%= f.text_area :comments %>
  </div>


  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :department %><br />  
    <%= f.select :department, [['IT'],['Marketing'],['Account Services'],['E-Commerce'],['General'],['Accounting'],['Retail'],['Visual'],['Merchandising'],['Production'],['Fabric and Trim'],['Tech Design'],['Print Design'],['Fashion Design'],['Print Design'],['Signature Stores'],['Specialtiy Stores'],['Major Stores'],['DC'],['Quality Control']] %>
  </div>

  <p>
  <b> Date Submitted:</b>
  <%= @request.created_at.strftime("%B %d, %Y") %>
</p>


  <div class="field">
    <%= f.label "Requested Date" %><br />
    <%= f.date_select :date %>
  </div>
 <!--  <div class="field">
    <%= f.label :time %><br />
    <%= f.text_field :time %>
  </div> 
  --> <div class="field">
    <%= f.label :budget %><br />
    <%= f.number_field :budget %>
  </div>
  <div class="field">
    <%= f.label :quantity %><br />
    <%= f.number_field :quantity %>
  </div>
  <div class="field">
    <%= f.label :priority %><br />
    <%= f.select :priority, [['Low'],['Medium'],['High'],['Urgent']] %>
  </div>
  <div class="field">
    <%= f.label :deliverable %><br />
    <%= f.select :deliverable, [['Print'],['Digital'],['Presentation'],['Booklet ']] %>
  </div>
  <div class="textarea_box">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>


  <div class="actions">
    <%= f.submit %>             
  </div>
<% end %>
